@inherits OutputDevicesBase

<div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="devicesMenuButton" 
            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
            @onclick="e => _show = !_show">
        @CurrentDeviceName
    </button>
    <div class="dropdown-menu @(_show? "show":"")" aria-labelledby="devicesMenuButton">
        @foreach (var device in _loopbackDevices)
        {
        <button class="dropdown-item" @onclick="e => OnSelect(device)">
            @device.FriendlyName
        </button>
        }
    </div>
</div>

